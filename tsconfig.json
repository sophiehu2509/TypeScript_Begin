{
  "compilerOptions": { //编译选项
    "target": "ES2016", //配置编译目标代码的版本标准
    "module":"CommonJS", //配置编译目标使用的模块化标准
    "lib":["ES2016", "DOM"], //配置环境
    "outDir": "./dist",
    "strictNullChecks": true,
    "removeComments": true //编译的时候去掉 comment的部分

  },
  "include": ["./src"], //只编译某个文件夹下的 ts文件
  //"files":[] /只编译某个文件的 ts文件
}
